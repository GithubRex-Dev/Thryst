<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/shopping_cdv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@drawable/selector_elevation"
        android:visibility="visible"
        app:cardBackgroundColor="#BDBDBD"
        app:cardCornerRadius="@dimen/dp_2"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/shopping_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:src="@mipmap/cardview_bg" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/item_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/toolBarGrey"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

                <ImageButton
                    android:id="@+id/option_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_more_vert"
                    android:layout_alignBottom="@+id/item_toolbar"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:clickable="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            <LinearLayout
                android:id="@+id/item_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_toolbar"
                android:clickable="false"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_24"
                android:orientation="vertical"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
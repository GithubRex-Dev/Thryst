<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thyrst.app">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.RecipeDetailActivity"
            android:label="@string/Recipes"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.HowToDetailActivity"
            android:label="@string/HowTo"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.ShoppingListEditActivity"
            android:label="ShoppingListEdit"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.ShoppingListAddActivity"
            android:label="ShoppingListAdd"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
